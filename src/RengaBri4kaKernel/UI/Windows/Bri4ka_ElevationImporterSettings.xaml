<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_ElevationImporterSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Настройки импорта рельефа">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <CheckBox x:Name="CheckBox_UseCoordsOffset" Content="Учитывать сдвиг координат в свойствах здания" IsChecked="True"></CheckBox>
            <GroupBox Header="Исходные данные">
                <StackPanel Orientation="Vertical">
                    <Button x:Name="Button_LoadFromLandXML" Margin="0,5,0,0" Content="Загрузить LandXML" Click="OnClick_LoadFromLandXML"></Button>
                    <Label Content="Перечень поверхностей в файле:"></Label>
                    <ListBox x:Name="ListBox_SurfacesList" Margin="0,5,0,0" Height="50" ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="OnSelect_ShowSurfaceInfo"></ListBox>
                </StackPanel>
            </GroupBox>
            <Label Content="Шаг горизонталей, м"></Label>
            <TextBox x:Name="TextBox_IsolinesStep" Text="0.2"></TextBox>
            <CheckBox x:Name="CheckBox_AddExternalContour" Margin="0,5,0,0" Content="Добавить запас автоматически" IsEnabled="False"></CheckBox>
            <Button x:Name="Button_StartImport" Margin="0,5,0,0" Content="Импортировать" Click="OnClick_StartImport"></Button>
        </StackPanel>
    </Grid>
</Window>
