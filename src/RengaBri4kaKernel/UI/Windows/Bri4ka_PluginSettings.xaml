<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_PluginSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Настройки плагина Bri4ka">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <GroupBox Header="Автозапуск функций">
                <StackPanel Orientation="Vertical">
                    <CheckBox x:Name="CheckBox_AutoStartFollowProjectVisualStyle" Content="Задание стиля 3D-вила проекта"></CheckBox>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Варианты визуального стиля 3D-вида">
                <StackPanel Orientation="Vertical">
                    <RadioButton x:Name="RadioButton_3dStyle_Wireframe" Content="Каркас"></RadioButton>
                    <RadioButton x:Name="RadioButton_3dStyle_Monochrome" Content="Монохромный"></RadioButton>
                    <RadioButton x:Name="RadioButton_3dStyle_Color" Content="Цветной"></RadioButton>
                    <RadioButton x:Name="RadioButton_3dStyle_Textured" Content="Текстурированный"></RadioButton>
                </StackPanel>
            </GroupBox>
            <Button x:Name="Button_Save" Margin="0,5,0,0" Click="Button_SaveSettings_Click" Content="Применить изменения"></Button>
        </StackPanel>
    </Grid>
</Window>
