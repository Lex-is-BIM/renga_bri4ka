<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_CollisionsReportViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Менеджер просмотра отчетов о коллизиях">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5,5,5,5">
            <Button x:Name="Button_LoadReport" Content="Загрузить отчет" Click="Button_LoadReport_Click"></Button>
            <Label Content="Информация о настройках проверки:" ></Label>
            <TextBox x:Name="TextBox_ConfigInfo" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="100" Grid.Row="0" ></TextBox>
            <Label Content="Перечень коллизирующих объектов:"></Label>
            <DataGrid x:Name="DataGrid_Collisions" VerticalScrollBarVisibility="Visible" AutoGenerateColumns="False" SelectionChanged="DataGrid_Collisions_SelectionChanged" IsReadOnly="True" Height="400" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Path=Date}" Width="100" />
                    <DataGridTextColumn Header="Тип коллизии" Binding="{Binding Path=Relation}" Width="100" />
                    <DataGridTextColumn Header="Имя объекта 1" Binding="{Binding Path=NameObject1}" Width="120" />
                    <DataGridTextColumn Header="Категория объекта 1" Binding="{Binding Path=CategoryObject1}" Width="150" />
                    <DataGridTextColumn Header="Код объекта 1" Binding="{Binding Path=ObjectId1}" Width="100" />
                    <DataGridTextColumn Header="Имя объекта 2" Binding="{Binding Path=NameObject2}" Width="120" />
                    <DataGridTextColumn Header="Категория объекта 2" Binding="{Binding Path=CategoryObject2}" Width="150" />
                    <DataGridTextColumn Header="Код объекта 2" Binding="{Binding Path=ObjectId2}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBox x:Name="TextBox_ItemInfo" Margin="0,5,0,0" IsReadOnly="true" Height="100" ScrollViewer.VerticalScrollBarVisibility="Visible"></TextBox>
            <CheckBox x:Name="CheckBox_GoToObjects" Margin="0,5,0,0" Content="Переходить к объектам при выборе коллизии в таблице"></CheckBox>
            <CheckBox x:Name="CheckBox_HideAllOtherObjects" Margin="0,5,0,0" Content="Скрывать все остальные объекты модели, кроме коллизирующих"></CheckBox>
            <CheckBox x:Name="CheckBox_CreateCollisionPhotos" Margin="0,5,0,0" Content="Создавать снимки коллизий (для отчета)" IsEnabled="False"></CheckBox>
            <Button x:Name="Button_SaveToHTML" Margin="0,5,0,0" Content="Сохранить отчет о коллизиях в HTML" IsEnabled="False" Grid.Row="4"></Button>
        </StackPanel>
    </Grid>
</Window>
