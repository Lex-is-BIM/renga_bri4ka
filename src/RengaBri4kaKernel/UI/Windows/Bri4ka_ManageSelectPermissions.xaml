<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_ManageSelectPermissions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Настройки отслеживания выбора">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <GroupBox Header="Настройки значений целевого свойства">
                <StackPanel Orientation="Vertical">
                    <TextBox x:Name="TextBox_EnumVariants" Height="100" ScrollViewer.VerticalScrollBarVisibility="Visible"></TextBox>
                    
				</StackPanel>
            </GroupBox>
            <GroupBox Header="Разрешенные значения свойства:">
                <StackPanel Orientation="Vertical">
                    <ListBox x:Name="ListBox_PermittedEnums" Height="100" ScrollViewer.VerticalScrollBarVisibility="Visible"></ListBox>
				</StackPanel>
            </GroupBox>


            <GroupBox Header="Действие при выборе запретных объектов">
                <StackPanel Orientation="Vertical">
                    <RadioButton x:Name="RadioButton_ReselSelAndShowWarning" Content="Снимать выбор с выводом предупреждающего окна"></RadioButton>
                    <RadioButton x:Name="RadioButton_ReselSel" Content="Снимать выбор без вывода предупреждающего окна"></RadioButton>
                    <RadioButton x:Name="RadioButton_AskEdit" Content="Выводить окно с подтверждением выбора объектов"></RadioButton>
                </StackPanel>
            </GroupBox>
            <Button x:Name="Button_SaveSettings" Margin="0,5,0,0" Content="Сохранить текущие настройки" Click="OnClick_SaveSettings"></Button>
            <Button x:Name="Button_LoadSettings" Margin="0,5,0,0" Content="Загрузить настройки" Click="OnClick_LoadSettings"></Button>
            <Separator Margin="0,5,0,0"></Separator>
            <Button x:Name="Button_SetSettings" Margin="0,5,0,0" Content="Применить настройки" Click="OnClick_SetSettings"></Button>

        </StackPanel>
    </Grid>
</Window>
