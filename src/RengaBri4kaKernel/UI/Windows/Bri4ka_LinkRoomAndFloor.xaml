<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_LinkRoomAndFloor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Настройки расчета для связывания помещений с перекрытиями" >
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <CheckBox x:Name="CheckBox_UseOnlyVisible" Content="Только для видимых помещений и перекрытий"></CheckBox>
            <GroupBox Header="Настройки анализа геометрии помещений">
                <StackPanel Orientation="Vertical">
                    <RadioButton x:Name="RadioButton_Geom_Centroid" Margin="0,5,0,0" Content="Геометрический центр помещения"></RadioButton>
                    <RadioButton x:Name="RadioButton_Geom_ExtSolidContour" Margin="0,5,0,0" Content="Низ солида помещения"></RadioButton>
                    <RadioButton x:Name="RadioButton_Geom_ExtContour" Margin="0,5,0,0" Content="Контур помещения"></RadioButton>
                </StackPanel>
            </GroupBox>
            <Button x:Name="Button_SaveSettingsToFile" Margin="0,5,0,0" Content="Сохранить настройки в файл" Click="Button_SaveSettingsToFile_Click"></Button>
            <Button x:Name="Button_LoadSettingsFromFile" Margin="0,5,0,0" Content="Загрузить настройки из файла" Click="Button_LoadSettingsFromFile_Click"></Button>
            <Separator Margin="0,5,0,5"></Separator>
            <Button x:Name="Button_Start" Margin="0,5,0,5" Content="Начать расчёт" Click="Button_Start_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
