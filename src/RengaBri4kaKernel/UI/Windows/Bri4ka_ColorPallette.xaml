<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_ColorPallette"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Выбор цвета RGB" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <!-- Red Channel -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Red:" VerticalAlignment="Center" Margin="0,0,5,0"/>
        <Slider Grid.Row="0" Grid.Column="1" x:Name="RedSlider" Minimum="0" Maximum="255" Value="197"
                ValueChanged="ColorSlider_ValueChanged"/>
        <TextBox Grid.Row="0" Grid.Column="2" x:Name="RedTextBox" Text="197" 
                 TextChanged="ColorTextBox_TextChanged" Tag="Red"/>

        <!-- Green Channel -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Green:" VerticalAlignment="Center" Margin="0,5,5,5"/>
        <Slider Grid.Row="1" Grid.Column="1" x:Name="GreenSlider" Minimum="0" Maximum="255" Value="133"
                ValueChanged="ColorSlider_ValueChanged" Margin="0,5,0,5"/>
        <TextBox Grid.Row="1" Grid.Column="2" x:Name="GreenTextBox" Text="133" 
                 TextChanged="ColorTextBox_TextChanged" Tag="Green" Margin="0,5,0,5"/>

        <!-- Blue Channel -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Blue:" VerticalAlignment="Center" Margin="0,5,5,5"/>
        <Slider Grid.Row="2" Grid.Column="1" x:Name="BlueSlider" Minimum="0" Maximum="255" Value="135"
                ValueChanged="ColorSlider_ValueChanged" Margin="0,5,0,5"/>
        <TextBox Grid.Row="2" Grid.Column="2" x:Name="BlueTextBox" Text="135" 
                 TextChanged="ColorTextBox_TextChanged" Tag="Blue" Margin="0,5,0,5"/>

        <!-- Alpha Channel -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Alpha:" VerticalAlignment="Center" Margin="0,5,5,5"/>
        <Slider Grid.Row="3" Grid.Column="1" x:Name="AlphaSlider" Minimum="0" Maximum="255" Value="255"
                ValueChanged="ColorSlider_ValueChanged" Margin="0,5,0,5"/>
        <TextBox Grid.Row="3" Grid.Column="2" x:Name="AlphaTextBox" Text="255" 
                 TextChanged="ColorTextBox_TextChanged" Tag="Alpha" Margin="0,5,0,5"/>

        <!-- Color Preview -->
        <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Height="60" Margin="0,10,0,0"
                x:Name="ColorPreview" Background="#80808080" BorderBrush="Black" BorderThickness="1"/>

        <!-- Color Information -->
        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" x:Name="ColorInfoText" 
                   Margin="0,10,0,0" TextWrapping="Wrap"/>

        <!-- Color Information -->
        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" x:Name="Button_OK" Content="Применить" Height="20" VerticalAlignment="Top" Click="Button_OK_Click"></Button>
    </Grid>
</Window>
