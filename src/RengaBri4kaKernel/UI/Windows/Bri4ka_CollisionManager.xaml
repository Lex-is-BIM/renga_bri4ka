<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_ClashDetective"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Настройка проверки на коллизии и пересечения" >
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5,5,5,5">
            <Label Content="Наименование проверки"></Label>
            <TextBox x:Name="TextBox_ClashName" Text="Проверка 1"></TextBox>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Объекты первой группы:"></Label>
                <ListBox x:Name="ListBox_Group1" Grid.Row="1" Grid.Column="0" Height="200" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionMode="Multiple" SelectionChanged="ListBox_Group1_SelectionChanged"></ListBox>
                <Label Grid.Row="0" Grid.Column="2" Content="Объекты второй группы:"></Label>
                <ListBox x:Name="ListBox_Group2" Grid.Row="1" Grid.Column="2" Height="200" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionMode="Multiple"></ListBox>
            </Grid>
            <Button x:Name="Button_ReverseChoosing12" Margin="0,5,0,0" Content="Обратить выбор между группами" Click="Button_ReverseChoosing12_Click"></Button>
            <Separator Margin="0,5,0,5"></Separator>
            <CheckBox x:Name="CheckBox_UseBaselines" Content="Анализировать только базовые линии (при наличии)" ></CheckBox>
            <Label Content="Допуск на проверку геометрии:"></Label>
            <TextBox x:Name="TextBox_Tolerance"></TextBox>
            <Label Content="Частота сегментации вырожденных линейных объектов:"></Label>
            <TextBox x:Name="TextBox_Segmentation"></TextBox>
			<GroupBox Header="Критерии проверки геометрии">
                <StackPanel Orientation="Vertical">
                    <CheckBox x:Name="CheckBox_GeomMode_Touching" Margin="0,5,0,0" Content="Тела касаются друг друга" IsChecked="True"></CheckBox>
                    <CheckBox x:Name="CheckBox_GeomMode_Intersecting" Margin="0,5,0,0" Content="Тела пересекаются" IsChecked="True"></CheckBox>
                    <CheckBox x:Name="CheckBox_GeomMode_Contains" Margin="0,5,0,0" Content="Объект первой группы содержит полностью объект из второй группы" IsChecked="True"></CheckBox>
                    <CheckBox x:Name="CheckBox_GeomMode_ContainedBy" Margin="0,5,0,0" Content="Объект первой группы входит полностью в объект из второй группы" IsChecked="True"></CheckBox>
                    <CheckBox x:Name="CheckBox_GeomMode_Equal" Margin="0,5,0,0" Content="Тела идентичны" IsChecked="True"></CheckBox>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Настройки передачи параметров от первого объекта ко второму">
                <StackPanel Orientation="Vertical">
                    <Label Content="Перечень параметров первой группы объектов"></Label>
                    <ListBox x:Name="ListBox_ParametersGroup1" Height="100" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionMode="Multiple"></ListBox>
                </StackPanel>
            </GroupBox>
			<Separator Margin="0,5,0,5"></Separator>
            <Button x:Name="Button_SaveSettingsToFile" Margin="0,5,0,0" Content="Сохранить настройки в файл" Click="Button_SaveSettingsToFile_Click"></Button>
            <Button x:Name="Button_LoadSettingsFromFile" Margin="0,5,0,0" Content="Загрузить настройки из файла" Click="Button_LoadSettingsFromFile_Click"></Button>
            <Separator Margin="0,5,0,5"></Separator>
            <Button x:Name="Button_Start" Content="Начать расчёт" Click="Button_Start_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
