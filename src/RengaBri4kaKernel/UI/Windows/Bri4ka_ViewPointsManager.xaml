<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_ViewPointsManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Диспетчер точек обзора">
    <Grid>
        <StackPanel Orientation="Vertical">
            <GroupBox Header="Панель отображения точек обзора">
                <StackPanel Orientation="Vertical">
                    <ListBox x:Name="ListBox_ViewPoints" Height="200" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="ListBox_ViewPoints_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Name}"></TextBox>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
					<CheckBox x:Name="CheckBox_GoToPoint" Content="Переходить на точку при выборе" IsChecked="True"></CheckBox>
                    <Separator Margin="5,5,5,5"></Separator>
                    <Label Content="Наименование точки обзора:"></Label>
                    <TextBox x:Name="TextBox_NewViewPointName"></TextBox>
                    <Button x:Name="Button_AddViewPoint" Margin="0,5,0,0" Content="Добавить" Click="Button_AddViewPoint_Click"></Button>
                    <Button x:Name="Button_DeleteViewPoint" Margin="0,5,0,0" Content="Удалить" Click="Button_DeleteViewPoint_Click"></Button>
                    <Button x:Name="Button_UpdateViewPoint" Margin="0,5,0,0" Content="Обновить" Click="Button_UpdateViewPoint_Click"></Button>
                    
                    <GroupBox Header="Видимость объектов">
                        <StackPanel Orientation="Vertical">
                            <RadioButton x:Name="RadioButton_ObjectsAll" Content="Только положение камеры" IsChecked="True"></RadioButton>
                            <RadioButton x:Name="RadioButton_ObjectsVisibleNow" Content="Только видимые объекты"></RadioButton>
                            <RadioButton x:Name="RadioButton_ObjectsAllNow" Content="Все объекты сейчас"></RadioButton>
                        </StackPanel>
                    </GroupBox>
                    <Button x:Name="Button_Reset" Margin="0,5,0,0" Content="Создать новую коллекцию" Click="Button_Reset_Click"></Button>
                    <Separator Margin="5,5,5,5"></Separator>
                    <Button x:Name="Button_SaveToFile" Content="Сохранить точки обзора в файл" Click="Button_SaveToFile_Click"></Button>
                    <Button x:Name="Button_LoadFromFile" Margin="0,5,0,0" Content="Загрузить точки обзора из файла" Click="Button_LoadFromFile_Click"></Button>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Экспорт снимков">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Разрешение снимков:"></Label>
                        <ListBox x:Name="ListBox_ImageResolution" Height="50" ScrollViewer.VerticalScrollBarVisibility="Visible"></ListBox>
                    </StackPanel>
                    <CheckBox x:Name="CheckBox_SaveAllScenes" Content="Сохранять для всех точек"></CheckBox>
                    <Button x:Name="Button_CreateScreens" Margin="0,5,0,0" Content="Экспортировать" Click="Button_CreateScreens_Click"></Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        
    </Grid>
</Window>
