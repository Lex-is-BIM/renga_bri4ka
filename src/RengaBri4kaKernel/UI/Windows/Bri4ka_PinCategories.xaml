<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_PinCategories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Настройка закрепления объектов">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ListBox_Categories" Grid.Row="0" Grid.Column="0" ScrollViewer.VerticalScrollBarVisibility="Visible" MinHeight="150" SelectionMode="Multiple" >
            
        </ListBox>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <CheckBox x:Name="CheckBox_SelecttAll" Content="Выбрать все"></CheckBox>
            <Button x:Name="Button_SetSelection" Margin="0,5,0,0" Content="Сохранить выбор"></Button>
        </StackPanel>
    </Grid>
</Window>
