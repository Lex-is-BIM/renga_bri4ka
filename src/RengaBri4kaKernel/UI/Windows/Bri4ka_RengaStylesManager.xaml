<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_RengaStylesManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Bri4ka_RengaStylesManager">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Margin="5,5,5,5" Grid.Column="0">
            <Label Content="Перечень всех стилей:"></Label>
            <DataGrid x:Name="DataGrid_StyleCollection" VerticalScrollBarVisibility="Visible" AutoGenerateColumns="False" Height ="300" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Имя" Binding="{Binding Path=Name}" Width="200" />
                    <DataGridTextColumn Header="STDL" Binding="{Binding Path=IsSTDL}" Width="50" />
                    <DataGridTextColumn Header="Категория" Binding="{Binding Path=Category}" Width="150" />
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="Расширенная информация о стиле:"></Label>
            <TextBox x:Name="TextBox_ExtendedInfo" Margin="0,5,0,0" Height="150"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="5,5,5,5" Grid.Column="1">
            <GroupBox Header="Поиск объектов в Библиотеке:">
                <StackPanel Orientation="Vertical">
                    <Label Content="Выберите категорию:"></Label>
                    <ListBox x:Name="ListBox_Category" Margin="0,5,0,0" Height="100" ScrollViewer.VerticalScrollBarVisibility="Visible"> </ListBox>
                    <Label Content="Часть имени или значения строкового параметра:"></Label>
                    <TextBox x:Name="TextBox_Search" Margin="0,5,0,0"></TextBox>
                    <Button x:Name="Button_FindStyles" Margin="0,5,0,0" Content="Найти стили"></Button>
                    <ListBox x:Name="ListBox_SearchResults" Margin="0,5,0,0" Height="150"></ListBox>
                    <Button x:Name="Button_InsertSelected" Margin="0,5,0,0" Content="Вставить выбранный"></Button>
                </StackPanel>
            </GroupBox>

            
            <Separator  Margin="0,5,0,5"></Separator>
            <Button x:Name="Button_ReadProjects" Margin="0,5,0,0" Content="Добавить стили из проекта Renga  "></Button>
            <Button x:Name="Button_ReadSTDL" Margin="0,5,0,0" Content="Добавить стили из RST"></Button>
            <Separator Margin="0,5,0,5"></Separator>
            <Button x:Name="Button_UpdateIcons" Margin="0,5,0,0" Content="Обновить иконки" IsEnabled="False"></Button>
            <Button x:Name="Button_CreateReport" Margin="0,5,0,0" Content="Создать отчет" IsEnabled="False"></Button>
        </StackPanel>
    </Grid>
</Window>
