<Window x:Class="RengaBri4kaKernel.UI.Windows.Bri4ka_RengaStylesManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RengaBri4kaKernel.UI.Windows"
        mc:Ignorable="d"
        Title="Bri4ka_RengaStylesManager" Height="450" Width="800">
    <Grid Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0">
            <Label Content="Перечень всех стилей:"></Label>
            <DataGrid x:Name="DataGrid_StyleCollection" VerticalScrollBarVisibility="Visible" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Path=Date}" Width="100" />
                    <DataGridTextColumn Header="Is STDL" Binding="{Binding Path=Relation}" Width="50" />
                    <DataGridTextColumn Header="Имя объекта 1" Binding="{Binding Path=NameObject1}" Width="120" />
                    <DataGridTextColumn Header="Категория объекта 1" Binding="{Binding Path=CategoryObject1}" Width="150" />
                    <DataGridTextColumn Header="Код объекта 1" Binding="{Binding Path=ObjectId1}" Width="100" />
                    <DataGridTextColumn Header="Имя объекта 2" Binding="{Binding Path=NameObject2}" Width="120" />
                    <DataGridTextColumn Header="Категория объекта 2" Binding="{Binding Path=CategoryObject2}" Width="150" />
                    <DataGridTextColumn Header="Код объекта 2" Binding="{Binding Path=ObjectId2}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
